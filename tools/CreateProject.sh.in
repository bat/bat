#
else
   m_header | sed -e "s/|\:UP_MODEL\:|/$upMYMODEL/g; s/|\:Model\:|/$MYMODEL/g; s/|\:Project\:|/$MYPROJECT/g" > $MYMODEL.h
   m_sourcecode | sed -e "s/|\:Model\:|/$MYMODEL/g" > $MYMODEL.cxx
